<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="false">

    <Button
        android:id="@+id/button_normalView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:elevation="0dp"
        android:onClick="setNormalView"
        android:text="Normal view" />

    <Button
        android:id="@+id/button_satelliteView"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:onClick="setSatelliteView"
        android:text="Satellite view" />

    <Button
        android:id="@+id/button_terrainView"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:onClick="setTerrainView"
        android:text="Terrain view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="384dp"
        android:layout_height="450dp"
        tools:context="com.example.soumyakalluri.mygooglemaps.MapsActivity" />

</LinearLayout>