<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_terrainView"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:onClick="setTerrainView"
            android:text="Terrain view" />

        <Button
            android:id="@+id/button_satelliteView"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:onClick="setSatelliteView"
            android:text="Satellite view" />

        <Button
            android:id="@+id/button_normalView"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:elevation="0dp"
            android:onClick="setNormalView"
            android:text="Normal view" />
    </LinearLayout>

    <Button
        android:id="@+id/button_tracker"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:onClick="getLocation"
        android:text="Use GPS" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="384dp"
        android:layout_height="475dp"
        tools:context="com.example.soumyakalluri.mygooglemaps.MapsActivity" />

</LinearLayout>